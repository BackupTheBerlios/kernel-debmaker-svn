      <arg><option>-w <replaceable>work_dir</replaceable></option></arg>
      <arg><option>-t <replaceable>target</replaceable></option></arg>
      <arg>-f <replaceable>kernel-build.xml</replaceable></arg>
    </cmdsynopsis>
  </refsynopsisdiv>
